<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0084b4">
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/answerBodyTextView"
        android:layout_alignBottom="@+id/answerAuthorTextView"
        android:id="@+id/answerScoreTextView"
        android:gravity="center_horizontal"
        android:text="@string/answerScore"
        android:textSize="25dp"
        android:background="#00aced"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/answerScoreTextView"
        android:id="@+id/answerBodyTextView"
        android:text="@string/answerBody"
        android:gravity="center|start"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/answerBodyTextView"
        android:layout_toRightOf="@+id/answerScoreTextView"
        android:id="@+id/answerAuthorTextView"
        android:text="@string/answerAuthor"
        android:gravity="end"
        />


</RelativeLayout>